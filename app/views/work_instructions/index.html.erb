<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <%= grid(@work_instructions_grid, show_filters: :always) do |g|

    g.column name: 'Code' do |work_instruction|
      work_instruction.workcode
    end
    g.column  name: 'Process' do |work_instruction|
      work_instruction.name
    end
    g.column name: 'Description' do |work_instruction|
      work_instruction.description
    end

    g.column name: 'Edit?' do |work_instruction|
          link_to('Modify', edit_work_instruction_path(work_instruction))
    end

  end %>

</div>

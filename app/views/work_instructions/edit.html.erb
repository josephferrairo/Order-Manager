<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Edit Work Instruction</h1>
  <%= simple_form_for @work_instruction do |f| %>
  <%= f.input :name, label: 'Name' %>
  <%= f.input :workcode, label: 'Code' %>
  <%= f.input :description %>
  <br  />
  <%= f.submit "Submit", class: 'btn btn-primary' %>
  <%= link_to 'Delete Record', work_instruction_path(@work_instruction), :method => :delete, :data => { :confirm => 'Are you sure you want to delete this record?' }, :class => 'btn btn-danger' %>
  <% end %>
  <br  />

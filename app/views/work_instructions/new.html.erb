<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Add a New Work Instruction</h1>
  <br  />
  <%= simple_form_for @work_instruction, url: work_instructions_path do |f| %>
  <%= f.input :name, label: "Name" %>
  <%= f.input :workcode, label: 'Work Instruction Code' %>
  <%= f.input :description %>
  <br  />
  <%= f.submit "Submit", class: 'btn btn-primary' %>
  <% end %>
</div>

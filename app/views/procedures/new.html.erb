<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Create a New Procedure</h1>
  <br />
  <%= simple_form_for @procedure, url: procedures_path do |f| %>
  <%= f.input :name, label: "Name" %>
  <%= f.input :code, label: "Code" %>
  <%= f.collection_check_boxes :work_instruction_ids, @work_instructions, :id, :name, :prompt => "Select a work instruction", input_html: { multiple: true}, :value_method => :to_sym %>
    <%= f.collection_select :work_instruction_ids, @work_instructions, :id, :name, :prompt => "Select a work instruction", input_html: { multiple: true}, :value_method => :to_sym %>


<br />
  <br />
  <%= f.submit "Submit", class: 'btn btn-primary' %>
  <% end %>
</div>

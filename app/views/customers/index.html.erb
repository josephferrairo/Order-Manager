<div class="booyah-box col-xs-10 col-xs-offset-1">
  <%= grid(@customers_grid) do |g|

    g.column do |customer|
      customer.name
    end
    g.column do |customer|
      customer.customercode
    end
    g.column do |customer|
      customer.address
    end
    g.column do |customer|
      customer.city
    end
    g.column do |customer|
      customer.state
    end
    g.column do |customer|
      customer.zipcode
    end
    
  end %>

</div>

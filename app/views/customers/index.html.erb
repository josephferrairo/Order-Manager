<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <%= grid(@customers_grid, show_filters: :always) do |g|

    g.column do |customer|
      customer.id
    end
    g.column do |customer|
      customer.name
    end
    g.column do |customer|
      customer.customercode
    end
    g.column do |customer|
      customer.address
    end
    g.column do |customer|
      customer.city
    end
    g.column do |customer|
      customer.state
    end
    g.column do |customer|
      customer.zipcode
    end
    g.column do |customer|
      link_to('Modify', edit_customer_path(customer))
    end

  end %>

</div>
